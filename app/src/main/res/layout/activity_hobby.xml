<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.HobbyActivity">

    <TextView
        style="@style/Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2/3"
        android:textColor="@color/gray_60"
        android:layout_marginEnd="20dp"

        app:layout_constraintBottom_toBottomOf="@+id/back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/back_button" />

    <LinearLayout
        android:id="@+id/back_button"
        android:layout_marginStart="8dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back_icon" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        style="@style/PageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        android:text="최근 관심사들을 선택해주세요"
        android:textColor="@color/gray_100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_button" />

    <LinearLayout
        android:layout_marginTop="36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/game_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/gray_20"
                app:cardCornerRadius="4dp"
                app:strokeColor="@color/gray_30"
                app:strokeWidth="1dp">

                <TextView
                    style="@style/Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginVertical="16dp"
                    android:layout_marginStart="16dp"
                    android:text="게임 🕹️"
                    android:textColor="@color/gray_100" />


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/travel_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/gray_20"
                app:cardCornerRadius="4dp"
                app:strokeColor="@color/gray_30"
                app:strokeWidth="1dp">

                <TextView
                    style="@style/Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginVertical="16dp"
                    android:layout_marginStart="16dp"
                    android:text="여행 ✈️"
                    android:textColor="@color/gray_100" />


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/move_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/gray_20"
                app:cardCornerRadius="4dp"
                app:strokeColor="@color/gray_30"
                app:strokeWidth="1dp">

                <TextView
                    style="@style/Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginVertical="16dp"
                    android:layout_marginStart="16dp"
                    android:text="영화 감상 🎬"
                    android:textColor="@color/gray_100" />


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/art_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/gray_20"
                app:cardCornerRadius="4dp"
                app:strokeColor="@color/gray_30"
                app:strokeWidth="1dp">

                <TextView
                    style="@style/Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginVertical="16dp"
                    android:layout_marginStart="16dp"
                    android:text="미술 🎨"
                    android:textColor="@color/gray_100" />


            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/sport_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/gray_20"
                app:cardCornerRadius="4dp"
                app:strokeColor="@color/gray_30"
                app:strokeWidth="1dp">

                <TextView
                    style="@style/Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginVertical="16dp"
                    android:layout_marginStart="16dp"
                    android:text="스포츠 ⚽️"
                    android:textColor="@color/gray_100" />


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/book_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/gray_20"
                app:cardCornerRadius="4dp"
                app:strokeColor="@color/gray_30"
                app:strokeWidth="1dp">

                <TextView
                    style="@style/Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginVertical="16dp"
                    android:layout_marginStart="16dp"
                    android:text="독서 📚"
                    android:textColor="@color/gray_100" />


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/music_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/gray_20"
                app:cardCornerRadius="4dp"
                app:strokeColor="@color/gray_30"
                app:strokeWidth="1dp">

                <TextView
                    style="@style/Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginVertical="16dp"
                    android:layout_marginStart="16dp"
                    android:text="음악 감상 🎶"
                    android:textColor="@color/gray_100" />


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/etc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/gray_20"
                app:cardCornerRadius="4dp"
                app:strokeColor="@color/gray_30"
                app:strokeWidth="1dp">

                <TextView
                    style="@style/Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginVertical="16dp"
                    android:layout_marginStart="16dp"
                    android:text="그 외 👀"
                    android:textColor="@color/gray_100" />


            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="16dp"
        app:cardBackgroundColor="@color/yellow"
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_gravity="center"
            android:layout_marginVertical="16dp"
            style="@style/SubHeadLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음"
            android:textColor="@color/gray_100" />


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>